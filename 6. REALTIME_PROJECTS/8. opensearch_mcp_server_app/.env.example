# Environment variables for OpenSearch MCP Server App
# Copy this file to .env and fill in your values

# OpenSearch Configuration
OPENSEARCH_URL=https://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=Developer@123
OPENSEARCH_SSL_VERIFY=false

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:9900/sse
MCP_SERVER_PORT=9900

# Application Configuration
APP_TITLE="OpenSearch MCP Server - Educational Demo"
APP_PORT=7860
APP_SHARE=false

# Feature Flags
VERBOSE_MODE=true
SHOW_QUERY_DETAILS=true
